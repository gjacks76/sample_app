<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container-fluid">
    <% @products.each do |product| %>
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
            <%= image_tag(product.image_url, class: "img-responsive") %>
              <div class="caption">
                <h3><%= product.name %></h3>
                <p>Description:&nbsp<%= product.description %></p>
                <p>Color:&nbsp<%= product.colour %></p>
                <p><strong><%= product.price %></strong></p>
                <p><a href="#" class="btn btn-primary" role="button">Buy</a></p>
                <p><%= product.highest_rating_comment %></p>
                <p><%= link_to 'Show', product %>
                <%= link_to 'Edit', edit_product_path(product) %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </div><!-- /caption -->
            </div><!-- /thumbnail -->
          </div><!-- /col -->
          <% end %>
        </div><!-- /row-->
    </div><!-- /container -->
</body>
